# ── OpenAI ──────────────────────────────────────────────
OPENAI_API_KEY=sk-...

# ── Gemini (primary LLM) ────────────────────────────────
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# ── OpenRouter (cached reframes) ────────────────────────
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-oss-120b:free

# ── Neo4j ───────────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=forensiq_secret
NEO4J_DATABASE=neo4j

# ── MongoDB (user auth) ─────────────────────────────────
MONGODB_URI=mongodb+srv://<user>:<pass>@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=forensiq

# ── Redis (response cache) ──────────────────────────────
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=86400

# ── JWT ─────────────────────────────────────────────────
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=72

# ── FAISS ───────────────────────────────────────────────
FAISS_INDEX_DIR=./data/faiss_index

# ── PageIndex ───────────────────────────────────────────
PAGEINDEX_STORE_DIR=./data/pageindex

# ── General ─────────────────────────────────────────────
UFDR_UPLOAD_DIR=./data/uploads
LOG_LEVEL=INFO
EMBEDDING_MODEL=gemini-embedding-001
EMBEDDING_DIMENSIONS=3072
PAGE_MAX_TOKENS=512

# ── Google Drive ────────────────────────────────────────
GDRIVE_CREDENTIALS_FILE=./config/gdrive_credentials.json
GDRIVE_TOKEN_FILE=./config/gdrive_token.json
GDRIVE_DOWNLOAD_DIR=./data/gdrive_downloads
